<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:paddingLeft="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/size_5dp"
    app:cardBackgroundColor="@color/cardView_bg"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    app:cardCornerRadius="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/size_5dp">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佚名"
                android:textSize="@dimen/size_16dp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5dp"
            android:text="在 Android 设备上搭建"
            android:textColor="@color/firstTitle"
            android:textSize="@dimen/size_16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/envelopePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/news_no_img"
                app:riv_corner_radius="@dimen/size_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/superChapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topic_bg"
                    android:padding="@dimen/size_5dp"
                    android:text="#标签1#"
                    android:textColor="@color/topic"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topic_bg"
                    android:padding="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:text="#标签2#"
                    android:textColor="@color/topic"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="@dimen/size_25dp"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:src="@mipmap/nozan" />

                <TextView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/niceDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="2天前" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text=" 发布" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>